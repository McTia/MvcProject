@model List<CourseViewModel>
<h1>@ViewData["Title"]</h1>
<div class="container-fluid">
    <form asp-action="CourseAjax" method="post" role="form">
        <table id="courseGrid" class="table table-light">
            <thead>
                <tr>
                    <th data-name="Author">Autore</th>
                    <th data-name="Name">Corso</th>
                    <th data-name="Duration">Durata</th>
                    <th data-priority="2">Azioni</th>
                </tr>
            </thead>
        </table>
    </form>
</div>

<form id="course-modal-form" role="form">
    <div id="course-modal" class="modal fade" role="dialog" aria-labelledby="simple" aria-hidden="true" style="display:none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><span id="rh-action"></span> prova</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group">
                                <span>Autore</span>
                                <input type="text" name="Author" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group">
                                <span>Corso</span>
                                <input type="text" name="Name" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group">
                                <span>Durata</span>
                                <input type="text" name="Duration" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light btn-sm waves-effect" data-dismiss="modal">Chiudi</button>
                        <button type="button" class="btn btn-primary btn-sm waves-effect waves-light btn-dt-confirm">Salva</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@*@await Html.PartialAsync("~/Views/Course/_CourseInputModal.cshtml")*@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/datatables.editable.artea.init.js"></script>
    <script>
        $(function () {
        $('#courseGrid').EditableTable({
            paging: true,
            ordering: false,
            dom: 'Btp',
            ajax: '@Url.Action("Courses")',
            rowId: 'Id',
            buttons: ["add", $.fn.EditableTable.CopyButton],
        },
        {
            editType: 'modal', modal: {
                wrapper: '#course-modal'
            },
            deletemodal: {
                animtype: "fade"
            }
        });
    });


    {
        function setCourseDataTable() {
            if ($.fn.dataTable.isDataTable('#courseGrid')) {
                _courseTable = $('#courseGrid').DataTable();
            }
            else {
                _courseTable = $('#courseGrid').DataTable({
                    searching: false,
                    paging: false,
                    info: false,
                    ordering: true,
                    columns: [
                        null,
                        null,
                        null
                    ],
                    order: []
                });
            }
        }
    }
    </script>
}


